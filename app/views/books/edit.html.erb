<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
         <p>! error</p>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f|%>
  <h4>Title</h4></h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div><%= f.submit 'Update Book'%></div>
<% end %>
<%=link_to 'Show', book_path(@book.id)%>
